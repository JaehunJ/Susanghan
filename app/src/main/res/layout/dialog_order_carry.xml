<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="택배 발송 처리"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="택배사 선택"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/UnderLineDropDown"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:textSize="12sp"
            app:hintEnabled="false"
            android:layout_height="50dp">
            <AutoCompleteTextView
                android:id="@+id/ac_carry"
                android:backgroundTint="#ffffff"
                android:textSize="12sp"
                android:cursorVisible="false"

                android:inputType="none"
                android:focusable="true"
                android:clickable="true"
                android:hint="택배사를 선택해주세요."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="송장번호 입력"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/UnderLineEditText"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:hintEnabled="false"
            android:textSize="12sp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_num"
                android:textSize="12sp"
                android:background="#ffffff"
                android:inputType="number"
                android:hint="송장번호를 숫자만 입력해주세요."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="취소"
                android:layout_marginEnd="2dp"
                app:backgroundTint="#c4c4c4"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginStart="2dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="확인"
                app:backgroundTint="#2f389f"/>
        </LinearLayout>
    </LinearLayout>
</layout>
