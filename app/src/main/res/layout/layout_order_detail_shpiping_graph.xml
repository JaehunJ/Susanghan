<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_3949ab">

    <View
        android:id="@+id/bar_back"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="23dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_white_10dp"/>

    <View
        android:id="@+id/bar_front"
        android:layout_marginStart="26dp"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/round_white_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cursor"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/oval_dot_white_stroke_424cc1"
        app:layout_constraintTop_toTopOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="@id/bar_back"
        app:layout_constraintStart_toStartOf="@id/tv_order_0"
        app:layout_constraintEnd_toEndOf="@id/tv_order_0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_order_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="주문완료"/>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_order_0"
        app:layout_constraintEnd_toStartOf="@id/tv_order_2"
        android:id="@+id/tv_order_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.5"
        android:text="상점도착"/>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_order_1"
        app:layout_constraintEnd_toStartOf="@id/tv_order_3"
        android:id="@+id/tv_order_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.5"
        android:text="수선중"/>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_order_2"
        app:layout_constraintEnd_toStartOf="@id/tv_order_4"
        android:id="@+id/tv_order_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.5"
        android:text="수선완료"/>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintTop_toBottomOf="@id/bar_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_order_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.5"
        android:text="발송완료"/>



</androidx.constraintlayout.widget.ConstraintLayout>