<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.oldee.expert.ui.design.add.DesignAddViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.design.add.DesignAddFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_basic_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:background="@color/gray_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:padding="24dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사진 등록"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사진은 최대 5개까지 등록 가능하며, 대표 사진을 1장 선택할 수 있습니다."
                        android:textSize="16dp" />

                    <!--                <androidx.recyclerview.widget.RecyclerView-->
                    <!--                    android:layout_marginStart="12dp"-->
                    <!--                    android:layout_marginEnd="12dp"-->
                    <!--                    android:id="@+id/rv_blue"-->
                    <!--                    app:spanCount="3"-->
                    <!--                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"/>-->

                    <!--old grid-->
                    <GridLayout
                        android:id="@+id/gl_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:columnCount="3">

                        <include
                            android:layout_marginBottom="4dp"
                            layout="@layout/layout_design_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="4dp"/>

                        <include
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            layout="@layout/layout_design_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1" />

                        <include
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"
                            layout="@layout/layout_design_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1" />

                        <include
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="4dp"
                            layout="@layout/layout_design_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1" />

                        <include
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            layout="@layout/layout_design_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="4dp"
                            android:id="@+id/ll_add_image"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="1:1"
                                android:background="@drawable/bg_round_8dp_sky_2"
                                >
                                <ImageView
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:id="@+id/btn_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_add_photo"
                                    android:tint="@color/sky_7"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </GridLayout>
                </LinearLayout>



                <!--old grid-->
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="24dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상품정보"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="상품명"
                        android:textSize="16dp" />

                    <FrameLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_8dp_white_stroke_1dp_gray2">
                        <com.google.android.material.textfield.TextInputLayout
                            app:boxStrokeWidth="0dp"

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:hintEnabled="false"
                            app:boxStrokeColor="@color/white">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/NormalText"
                                android:textSize="16dp"
                                android:hint="상품명을 입력해주세요."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/gray_4"
                                android:text="@={data.reformName}" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>


                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="가격"
                        android:textSize="16dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_round_8dp_white_stroke_1dp_gray2">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeWidth="0dp"
                            app:hintEnabled="false"
                            app:boxStrokeColor="@color/gray_2">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/NormalText"
                                android:textSize="16dp"
                                android:textColorHint="@color/gray_4"
                                android:hint="가격을 숫자로 입력해주세요."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="@={data.price}"
                                android:maxLength="8"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            style="@style/BoldText"
                            android:textSize="12dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상세정보"
                        android:textSize="16dp" />
                    <FrameLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_8dp_white_stroke_1dp_gray2">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:boxStrokeWidth="0dp">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/NormalText"
                                android:textSize="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="디자인에 대한 설명을 입력해주세요."
                                android:textColorHint="@color/gray_4"
                                android:gravity="top"
                                android:lines="5"
                                android:text="@={data.contents}" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </FrameLayout>


                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="준비물"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:background="@drawable/bg_round_8dp_gray_1"
                        android:layout_marginTop="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:id="@+id/rv_prepare_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:itemCount="5"
                        tools:listitem="@layout/layout_design_add_prepare_item"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_add_prepare"
                        android:layout_marginTop="8dp"
                        style="@style/SkyBigRoundBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="준비물 추가하기"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:padding=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="이렇게 변했어요"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_dotted">

                            <ImageView
                                android:id="@+id/iv_before"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:adjustViewBounds="true"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/ll_delete_before"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#99000000"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_cancel_white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="삭제"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_add_before"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/btn_add_before"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/icon_add" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:text="변경 전 사진 등록"
                                    android:textColor="#3949AB"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_dotted">

                            <ImageView
                                android:id="@+id/iv_after"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:adjustViewBounds="true"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <LinearLayout
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/ll_delete_after"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#99000000"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_cancel_white"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="삭제"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_add_after"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/btn_add_after"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/icon_add" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="9dp"
                                    android:text="변경 후 사진 등록"
                                    android:textColor="#3949AB"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:padding="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소요시간"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        style="@style/NormalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="실제 리폼에 필요한 작업 일수를 입력해주세요."
                        android:textSize="16dp" />


                    <TextView
                        android:layout_marginTop="24dp"
                        style="@style/BoldText"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최소"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_round_8dp_white_stroke_1dp_gray2">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeWidth="0dp"
                            app:hintEnabled="false"
                            app:boxStrokeColor="@color/gray_2">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/NormalText"
                                android:textSize="16dp"
                                android:textColorHint="@color/gray_4"
                                android:hint="최소 소요일을 숫자로 입력해주세요"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="@={data.price}"
                                android:maxLength="8"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            style="@style/BoldText"
                            android:textSize="12dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        style="@style/BoldText"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최대"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_round_8dp_white_stroke_1dp_gray2">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeWidth="0dp"
                            app:hintEnabled="false"
                            app:boxStrokeColor="@color/gray_2">

                            <com.google.android.material.textfield.TextInputEditText
                                style="@style/NormalText"
                                android:textSize="16dp"
                                android:textColorHint="@color/gray_4"
                                android:hint="최대 소요일을 숫자로 입력해주세요"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:text="@={data.price}"
                                android:maxLength="8"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            style="@style/BoldText"
                            android:textSize="12dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"/>

                    </LinearLayout>


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="66dp"
                    style="@style/SkyBigFlatBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_post"
                    android:text="디자인 저장"
                />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
