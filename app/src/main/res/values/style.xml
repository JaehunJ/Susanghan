<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/white</item>
    </style>



    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_shape_bottom_sheet</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@color/color_transparent</item> <!-- And then this will be needed -->
        <!--        <item name="android:navigationBarColor">@color/bottom_sheet_background</item>-->
        <item name="android:colorBackground">@color/bottom_sheet_background</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!--Textview-->
    <style name="SusanghanTextview" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/spoqa</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SusanghanEditText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/spoqa</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--bottom nav-->
    <style name="BottomNavTextColor" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/bottom_nav_select</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">@color/bottom_nav_nor</item>
    </style>

    <style name="TabOrderList" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_order_top_tab</item>
        <item name="tabSelectedTextColor">#2F389F</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="TabOrderSort" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_order_sort_tab</item>
    </style>

    <style name="TabDesignList" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_design_top_tab</item>
        <item name="tabSelectedTextColor">#2F389F</item>
        <item name="tabTextColor">#666666</item>
    </style>

    
    <!--common dialog-->
    <style name="CommonCustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/CommonCustomDialog.NeBtn</item>
        <item name="buttonBarPositiveButtonStyle">@style/CommonCustomDialog.PoBtn</item>
    </style>

    <style name="CommonCustomDialog.PoBtn" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_424CC1</item>
    </style>

    <style name="CommonCustomDialog.NeBtn" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_basic</item>
    </style>

    <!--withdraw edittext-->
    <style name="WithdrawEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#e5e5e5</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    
    <style name="UnderLineEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#dadada</item>
        <item name="colorControlNormal">#dadada</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorAccent">#dadada</item>
    </style>

    <style name="UnderLineDropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#dadada</item>
        <item name="colorControlNormal">#dadada</item>
        <item name="endIconTint">#000000</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

<!--    <style name="WithdrawEditText.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox."-->

