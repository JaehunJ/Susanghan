<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.susanghan.android.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_orderFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:destination="@id/navigation" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.susanghan.android.ui.order.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_order_old">
        <action
            android:id="@+id/action_orderFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/csFragment"
        android:name="com.susanghan.android.ui.cs.CsFragment"
        android:label="fragment_cs"
        tools:layout="@layout/fragment_cs" />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.susanghan.android.ui.product.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.susanghan.android.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" />
    <action
        android:id="@+id/action_global_csFragment"
        app:destination="@id/csFragment" />
    <action
        android:id="@+id/action_global_moreFragment"
        app:destination="@id/moreFragment" />
    <action
        android:id="@+id/action_global_productFragment"
        app:destination="@id/productFragment" />
    <action
        android:id="@+id/action_global_orderFragment"
        app:destination="@id/orderFragment" />
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/signInFragment">
        <fragment
            android:id="@+id/signInFragment"
            android:name="com.susanghan.android.ui.signin.SignInFragment"
            android:label="fragment_sign_in"
            tools:layout="@layout/fragment_sign_in" >
            <action
                android:id="@+id/action_signInFragment_to_findIdFragment"
                app:destination="@id/findIdFragment" />
            <action
                android:id="@+id/action_signInFragment_to_findPwFragment"
                app:destination="@id/findPwFragment" />
            <action
                android:id="@+id/action_signInFragment_to_signUpFragment"
                app:destination="@id/signUpFragment" />
        </fragment>
        <fragment
            android:id="@+id/findIdFragment"
            android:name="com.susanghan.android.ui.signin.findid.FindIdFragment"
            android:label="fragment_find_id"
            tools:layout="@layout/fragment_find_id" />
        <fragment
            android:id="@+id/findPwFragment"
            android:name="com.susanghan.android.ui.signin.findpw.FindPwFragment"
            android:label="fragment_find_pw"
            tools:layout="@layout/fragment_find_pw" />
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.susanghan.android.ui.signup.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up" />
    </navigation>
    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.susanghan.android.OrderDetailFragment"
        android:label="fragment_order_detail"
        tools:layout="@layout/fragment_order_detail" />
</navigation>